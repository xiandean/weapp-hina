page {
  line-height: 24px;
  height: 100%;
}

.container {
  height: 100%;
  border-top: 1px solid #ebebeb;
  border-bottom: 1px solid #ebebeb;
  box-sizing: border-box;
} 

.movies {
  height: 100%;
}
.movie {
  position: relative;
  margin-bottom: 5px;
  padding: 10rpx;
  box-shadow: 0 2px 2px #ebebeb;
  display: flex;
}
.movie-cover {
  width: 250rpx;
  height: 300rpx;
}
.movie-title {
  flex: 1;
  font-size: 18px;
  color: #333;
  padding: 10rpx 20rpx 0;
}
.movie-desc {
  font-size: 16px;
  margin-top: 20rpx;
  text-align: justify;
  color: #8b8b8b;
}